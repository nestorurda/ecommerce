<p id="notice"><%= notice %></p>

<h1>Variations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Price</th>
      <th>color</th>
      <th>size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variations.each do |variation| %>
    <tr>
      <td><%= variation.product.name %></td>
      <td><%= variation.product.description %></td>
      <td><%= variation.stock %></td>
      <td><%= variation.price %></td>
      <td><%= variation.color.name %></td>
      <td><%= variation.size.name %></td>

      <td><%= link_to 'Show', variation %></td>
      <td><%= link_to 'Edit', edit_variation_path(variation) %></td>
      <td><%= link_to 'Destroy', variation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Variation', new_variation_path %>